<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>{% block title %}Home{% endblock %}</title>
            {% block stylesheets %}
                <link rel="icon" type="image/x-icon" href="{{ asset('glezand.svg') }}" />
                <link rel="stylesheet" href="{{ asset('css/adminlte/adminlte.css') }}" />
                <link rel="stylesheet"
                      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"
                      integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog=="
                      crossorigin="anonymous"
                      referrerpolicy="no-referrer"
                />
            {% endblock %}
        {% endblock %}z
    </head>
    <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
    <!-- Navbar -->
        {% embed 'default/navbar.html.twig' %} {% endembed %}

        <!--  Sidebar -->
        {% embed 'default/sidebar.html.twig' %} {% endembed %}

        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h4 class="m-0 text-dark">{% block page_title %}{% endblock %}</h4>
                        </div>
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->

            <!-- Main Content -->
            <section class="content">
                {% block seccion_content %}{% endblock %}
            </section>
            <!-- /.Content -->
        </div>

        <!-- Footer -->
        {% embed 'default/footer.html.twig' %} {% endembed %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                    integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                    crossorigin="anonymous">
            </script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
                    crossorigin="anonymous">
            </script>

            <script src="{{ asset('js/adminlte/adminlte.js') }}"></script>
        {% endblock %}
    </div>
    </body>
</html>