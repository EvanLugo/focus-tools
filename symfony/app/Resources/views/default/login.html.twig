{% extends 'base.html.twig' %}

{% block body %}
    {% if app.request.hasPreviousSession %}
        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success" role="alert">
                {{ flash_message }}
            </div>
        {% endfor %}
    {% endif %}
<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="#"><img src="{{ asset('glezand.svg') }}" style="margin-top: 10%;"></img></a>
    </div>
    <!-- /.login-logo -->
    <div class="card" style="margin-bottom: 90%;">
      <div class="card-body login-card-body">
      {% if error %}
        <div class="alert alert-danger alert-dismissible">
          <li>Credenciales Invalidas</li>
        </div>
      {% else %}
          <p class="login-box-msg">Ingresa usuario y contraseña para iniciar sesión</p>
      {% endif %}
        <form action="{{ path('login_check') }}" method="post">
          <div class="input-group mb-3">
            <input type="email" placeholder="Email"
                   id="username" name="_username" value="{{ last_username }}"
                   {% if error %} class="form-control is-invalid" {% else %} class="form-control" {% endif %} 
            >
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="password" placeholder="Password"
                   id="password" name="_password"
                   {% if error %} class="form-control is-invalid" {% else %} class="form-control" {% endif %}
            >
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-8">
              <div class="icheck-primary">

              </div>
            </div>
            <!-- /.col -->
            <div class="col-4">
              <button type="submit" class="btn btn-warning btn-block"> Ingresar</button>
            </div>
            <!-- /.col -->
          </div>
        </form>
        <p class="mb-1">
          <a href="{{ path('recover_password') }}">Olvide mi contraseña</a>
        </p>
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->
</body>
{% endblock %}