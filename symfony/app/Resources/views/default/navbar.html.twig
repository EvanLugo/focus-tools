<nav class="main-header navbar navbar-expand navbar-light">
    <!-- Right navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>

    <ul class="navbar-nav ml-auto">
        <!-- Notifications Dropdown Menu -->
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-bell"></i>
                {% if app.getSession().get('notifications')|length > 0 %}
                <span class="badge badge-danger navbar-badge">
                    {{ app.getSession().get('notifications')|length }}
                </span>
                {% endif %}
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-item dropdown-header">
                    Notificaciones
                </span>
                {% if app.getSession().get('notifications') is empty %}
                    <div class="dropdown-divider"></div>
                    <small class="form-text text-muted badge dropdown-item">
                        <span class="fa fa-check-double"></span>
                        sin notificaciones activas
                    </small>
                    <div class="dropdown-divider"></div>
                {% else %}
                    {% for notification in app.getSession().get('notifications') %}
                    <div class="dropdown-divider"></div>
                    <a href="{{ path('read_notification', {'id': notification.id}) }}" class="dropdown-item">
                        <small class="form-text text-muted badge">
                            <i class="{{ notification.getIcon }}"></i>
                            {{ notification.getType }}:
                            <b>{{ notification.getCreatedDate()|date("d/m/Y") }}</b>
                        </small>
                    </a>
                    <div class="dropdown-divider"></div>
                    {% endfor %}
                {% endif %}
                <a href="#" class="dropdown-item dropdown-footer">Ver todas las notificaciones</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <!-- User Account Menu -->
        <li class="nav-item dropdown user-menu">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                <img src="http://placehold.it/160x160" class="user-image img-circle elevation-2" alt="User Image"/>
                <span class="d-none d-md-inline">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        SUPER ADMIN
                    {% elseif is_granted('ROLE_ADMIN')%}
                        ADMIN
                    {% else %}
                        USER
                    {% endif %}
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <!-- User image -->
                <li class="user-header bg-warning">
                    <img src="http://placehold.it/160x160" class="img-circle elevation-2" alt="User Image">

                    <p>
                         Evan Lugo
                        <small>  LPG Levi </small>
                    </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                    <a href="#" class="btn btn-default btn-flat float-right">Salir</a>
                </li>
            </ul>
        </li>
    </ul>
</nav>