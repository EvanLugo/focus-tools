{% extends 'master.html.twig' %}

{% block seccion_content %}

    <div class="card card-primary card-outline">
        <div class="card-header">
            <h3 class="card-title">Datos de Unidad</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                    <div class="row">
                        <div class="col-12 col-sm-12">
                            <div class="card-body box-profile">

                                <div class="card-deck">
                                    {% for form in forms %}
                                        <div class="card">
                                            <img class="card-img-top" src="{{ asset('images/Insignias/' ~ form.vars.value.rankedTier ~ '.png') }}" alt="Card image cap">
                                            {{ form(form) }}
                                        </div>
                                    {% endfor %}

                                </div>
                                <a class="btn btn-default" href="{{ url('browser') }}">Back</a>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let form = document.getElementsByTagName('form');
        console.log(form);
    </script>
{% endblock %}