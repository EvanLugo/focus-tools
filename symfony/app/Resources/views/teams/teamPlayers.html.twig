{% extends 'master.html.twig' %}

{% block seccion_content %}

    <div class="card card-dark card-outline">
        <div class="card-header">
            <h3 class="card-title">Teams List</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
                    <div class="row">
                        <div class="col-12 col-sm-12">
                            <div class="card-body box-profile">

                                <div class="card">
                                    <div class="text-center">
                                        <img
                                                class="rounded-circle"
                                                style="width: 200px; height: 200px"
                                                src="{{ asset('images/teamLogos/' ~ team.getImage()) }}"
                                        >
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item text-center">
                                            <b>
                                                <h4>
                                                    {{ team.getName() }}
                                                </h4>
                                            </b>
                                        </li>
                                        <li class="list-group-item">
                                            <b>TAG:</b> {{ team.getTag() }}
                                        </li>
                                        <li class="list-group-item">
                                            <b>Region:</b> {{ team.getRegion() }}
                                        </li>
                                        <li class="list-group-item text-center">
                                            <h5>TEAM PLAYERS</h5>
                                        </li>
                                        <div class="card-deck">
                                            {% for player in players %}
                                                <div class="card">
                                                    <img class="card-img-top bg-dark" src="{{ asset('images/Insignias/' ~ player.getRankedTier() ~ '.png') }}" alt="Card image cap">
                                                    <ul class="list-group list-group-flush">
                                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                                            <b>{{ player.getName() }}</b>
                                                            {% if player.getCaptain() == 1 %}
                                                            <div class="form-check">
                                                                <label class="form-check-label" for="exampleCheck1">
                                                                    Captain
                                                                    <span class="fa fa-hat-cowboy"></span>
                                                                </label>
                                                            </div>
                                                            {% endif %}
                                                        </li>
                                                        <li class="list-group-item">
                                                            <i class="fab fa-xbox"></i>
                                                            {{ player.getPlatform() }}
                                                        </li>
                                                        <li class="list-group-item">Ranked KDA: {{ player.getKda() }}</li>
                                                    </ul>
                                                </div>
                                            {% endfor %}

                                        </div>

                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}